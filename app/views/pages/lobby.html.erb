<div class="container h-100 d-flex justify-content-between align-items-center">
  <div class="card m-auto">
    <div class="card-header">Choisis un perso</div>
    <ul class="card-body p-0 list-group w-100">
      <% @characters.each do |character| %>
        <%= link_to game_path(character_id: character.id) do %>
          <li class="list-group-item w-100">
            <%= character.name %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
